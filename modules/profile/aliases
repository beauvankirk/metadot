# Generic aliases
alias ls="ls --color=auto"
alias ll="ls --color=auto -lh"
alias kedpmc="kedpm -c"
alias gvim="vim.gtk -g &> /dev/null"
alias gitk="nohup gitk &> /dev/null"
alias drush="php -d error_reporting=E_ALL^E_NOTICE `which drush`"
alias news="newsbeuter #; newsbeuter -X"
alias music="ncmpcpp"

# Editor, avoiding "Avoiding protocol specified" error
alias vim="vim -X"
alias vi="vim -X"

# Development
alias dquilt="quilt --quiltrc=${HOME}/.quiltrc-dpkg"
